%main
  .inner9
    .panel.block
      = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
        .row
          .logo= image_tag('tenon/client-logo.png')
          .title
            = Tenon::MySettings.site_title
        - unless flash[:alert].blank?
          .flash= flash[:alert]
        = f.label :email, :label => "Email Address:"
        = f.email_field :email, placeholder: 'user@example.com', autofocus: true

        = f.label :password, :label => "Password:"
        = f.password_field :password, placeholder: 'password', autocomplete: 'off'

        = f.check_box :remember_me, class: 'tn-checkbox-left'
        = f.label :remember_me, "Remember Me?"

        %br/
        %br/
        = f.submit "Login", :class => "btn"
        %br/
        %br/
      = render "devise/shared/links"
