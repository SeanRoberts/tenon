<li data-record-id="<%= @post.id %>">
  <div class="record-details">
    <div class="record-title post">
      <strong>
        <a href="<%= @post.edit_path %>"><%= @post.title %></a>
      </strong>
      <div class='explanation'>
        <%= @post.created_at %>
      </div>
    </div>

    <div class="record-actions">
      <%- @post.view_link %>
      <%- @post.subpost_link %>
      <%- @post.edit_link %>
      <%- @post.delete_link %>
    </div>
  </div>
</li>
