<li data-record-id="<%= @banner.id %>">
  <div class="thumbnail"><%- @banner.thumbnail %></div>
  <div class="record-details">
    <div class="record-title">
      <strong>
        <a href="<%= @banner.edit_path %>"><%= @banner.title %></a>
      </strong>
    </div>

    <div class="record-actions">
      <%- @banner.delete_link %>
      <%- @banner.edit_link %>
    </div>
  </div>
</li>
