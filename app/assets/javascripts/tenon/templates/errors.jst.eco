<div class="error-explanation">
  <h4><%= I18n.tenon.common.the_following_errors_occurred %>:</h2>
  <ul>
    <% for field, errors of @errors: %>
      <% for error in errors: %>
        <li>
          <%= _.str.capitalize(_.str.humanize(field)) %>
          <%= error %>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
