.tn-tc-row
  = f.hidden_field :item_method, value: field
  .tn-tc-topbar
    .actions
      %i.fa.fa-arrows.drag-anchor

      = link_to '#', class: 'tn-tc-open-library above', 'data-modal-target' => '.tenon-library', 'data-modal-title' => "Add Row Above", 'data-modal-handler' => 'Tenon.features.tenonContent.Library' do
        = fa_icon('plus-circle')
        %span Above

      = link_to '#', class: 'tn-tc-open-library below', 'data-modal-target' => '.tenon-library', 'data-modal-title' => "Add Row Below", 'data-modal-handler' => 'Tenon.features.tenonContent.Library' do
        = fa_icon('plus-circle')
        %span Below

      = link_to_remove_association(fa_icon('trash-o'), f, {'data-confirm' => 'Are you sure?', 'data-wrapper-class' => 'tn-tc-row'})

    .spacer

  .tn-tc-fields= render row_partial, f: f
.spacer