- content_for :sidebar do
  .sidebar
    .content
      %h2 Notifications
      - unless @warnings.empty?
        %h3 Some items need your attention!

        - @warnings.each do |warning|
          .notification= warning

%header
  %h1 Welcome to Tenon

  .spacer

.main-content
  #dashboard-callouts.container
    // change the count to test various quantities of callouts - eimaj
    - @tenon_callouts.each do |callout|
      .callout
        %h4.title
          %i{class: "fa fa-#{callout.icon}"}
          = callout.title

        .callout-content= raw callout.content
        %p
          = link_to callout.button_text, callout.uri, class: "btn btn-info", target: ("_" if callout.new_window)
